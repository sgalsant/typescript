    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Iniciar app",
            "url": "http://localhost:5500",
            "webRoot": "${workspaceFolder}",
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "Iniciar test",
            "url": "http://localhost:5500/test.html",
            "webRoot": "${workspaceFolder}",
        },
        {
            "type": "node",
            "request": "launch",
            "name": "node app.ts",
            "program": "${workspaceFolder}/src/app.ts",
      //      "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": ["${workspaceFolder}/dist/*.js"]
        }
    ]
}