    "typescript": "^3.8.3"
  },
  "scripts": {
    "lint": "eslint . --ext .ts --ext .js --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "start": "node dist/app.js",
    "start:build": "npm run build && npm run start",
    "start:live": "nodemon",
    "start:live:build": "tsc -b src test && npm run start",
    "delete": "rimraf ./dist && rimraf ./dist-test",
    "build": "npm run delete && tsc -b src test",
    "build:live": "npm run delete && tsc -b src test -w",
    "test": "npm run build && ./node_modules/.bin/mocha  --reporter spec dist-test/**/*.test.js"
