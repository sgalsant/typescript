{
  "name": "miproyecto",
  "version": "1.0.0",
  "description": "Plantilla proyecto visual code para clase de programación con javascript, typescript y node",
  "main": "src/app.js",
  "type": "module",
  "bin": {
    "typescript": "app.test.js"
  },
  "directories": {
    "test": "test"
  },
  "dependencies": {},
  "devDependencies": {
    "@shopify/eslint-plugin": "^36.0.2",
    "@types/chai": "^4.2.11",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.9.5",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "chai": "^4.2.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-shopify": "^35.1.0",
    "live-server": "^1.2.1",
    "mocha": "^7.1.0",
    "nodemon": "^2.0.2",
    "prettier": "^2.0.2",
    "rimraf": "^3.0.2",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "start": "node dist/app.js",
    "start:debug": "node --nolazy --inspect-brk=9229 dist/app.js",
    "start:live": "npm run start:build && nodemon --exec 'npm run build && npm run start'",
 
    "test": "./node_modules/.bin/mocha  --require test/helper.cjs --reporter spec dist_test/**/*.test.js",
    "test:debug": "./node_modules/.bin/mocha --nolazy --inspect-brk=9229 --timeout 999999 --colors --require test/helper.cjs --reporter spec dist_test/**/*.test.js",
    "test:live": "nodemon --exec 'npm run build && npm run test'",

    "browser:test": "npm run delete && npm run build && npm run browser:live & npm run build:live",
    "browser:live": "live-server --browser=\"google-chrome\" --wait=2000 --port=8080 --open=\"test.html\" --watch=\"dist,dist_test,public,*.html\" -V", 
    
    "start:build": "npm run delete && npm run build && npm run start",
  
     "lint": "eslint . --ext .ts --ext .js --fix",
    "prettier-format": "prettier --config .prettierrc 'src/**/*.ts' --write",

    "delete": "rimraf ./dist && rimraf ./dist_test",
    "build": "tsc -b src test",
    "build:live": "tsc -b src test -w",
    
    "test:build": "npm run delete && npm run build && npm run test"
  },
  "author": "Santiago Galván Sánchez",
  "license": "ISC"
}
