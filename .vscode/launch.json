{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Chrome app",
            "type": "chrome",
            "request": "launch",
            "port": 9223,
            "url": "http://localhost:8080/public/index.html",
            "webRoot": "${workspaceFolder}"
        },

        {
            "name": "Chrome test",
            "type": "chrome",
            "request": "launch",
            "port": 9223,
            "url": "http://localhost:8080/public/test.html",
            "webRoot": "${workspaceFolder}"
        },
        
        {
            "name": "node app",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "npm",
            "sourceMaps": true,
            "outFiles": [
                "${workspaceFolder}/dist/*"
            ],
            "runtimeArgs": [
                "run",
                "start:debug"
            ],
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },

        {
            "name": "node test",
            "type": "node",
            "request": "launch",
            "cwd": "${workspaceFolder}",
            "runtimeExecutable": "npm",
            "sourceMaps": true,
            "outFiles": ["${workspaceFolder}/dist_test/*", "${workspaceFolder}/dist/*"],
            "runtimeArgs": [
                "run",
                "test:debug"
            ],
            "port": 9229,
        },

        {
            "name": "Attach to Chrome",
            "type": "chrome",
            "request": "attach",
            "port": 9222,
            "urlFilter": "http://127.0.0.1:8080/*",
            "webRoot": "${workspaceFolder}"
        },

        {
            "name": "Attach to node",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**",
                "${workspaceFolder}/node_modules/**"
            ]
        },
    ]
}