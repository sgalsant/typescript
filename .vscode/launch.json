    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "test",
            "runtimeExecutable": "npm",
            "runtimeArgs": [
                "test",
                "debug"
            ],
            "port": 9229,
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "web app",
            "url": "http://localhost:5500",
            "webRoot": "${workspaceFolder}",
        },
        {
            "type": "chrome",
            "request": "launch",
            "name": "web test",
            "url": "http://localhost:5500/test.html",
            "webRoot": "${workspaceFolder}",
        },
   {
    "name": "app",
    "type": "node",
    "request": "launch",
    "cwd": "${workspaceFolder}",
    "runtimeExecutable": "npm",
    "runtimeArgs": [
        "run-script",
        "debug"
    ],
    "port": 9229
}
    ]
}